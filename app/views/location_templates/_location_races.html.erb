<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Races

    <a data-toggle="collapse" href="#location_races_new_form">
      Add race
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.races.each do |race| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/races/<%= race.id %>">
          <%= race.user_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_race_from_city/<%= race.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_races_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "location_templates/location_races_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
