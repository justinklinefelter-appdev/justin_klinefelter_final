<% if @races_homepage.present? %>
  <% if @races_homepage.errors.any? %>
    <% @races_homepage.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new races homepage
</h1>


<hr>

<form action="/create_races_homepage" method="post">

  <div class="form-group">
    <label for="race_id">
      Race
    </label>

    <%= select_tag(:race_id, options_from_collection_for_select(Race.all, :id, :user_id, @races_homepage.race_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @races_homepage.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="location_id">
      Location
    </label>

    <%= select_tag(:location_id, options_from_collection_for_select(Location.all, :id, :race_id, @races_homepage.location_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create races homepage
  </button>
</form>

<hr>

<a href="/races_homepages">
  Go back
</a>
