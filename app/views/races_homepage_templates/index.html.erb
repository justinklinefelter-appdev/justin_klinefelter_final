<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All races homepages
    </h1>

    <a href="/races_homepages/new" class="btn btn-block btn-outline-secondary">
      Add a new races homepage
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "races_homepage_templates/races_homepages_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Race
        </th>

        <th>
          User
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @races_homepages.each do |races_homepage| %>
      <tr>
        <td>
          <%= races_homepage.id %>
        </td>

        <td>
          <% if races_homepage.race.present? %>
            <a href="/races/<%= races_homepage.race.id %>">
              <%= races_homepage.race.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if races_homepage.user.present? %>
            <a href="/users/<%= races_homepage.user.id %>">
              <%= races_homepage.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if races_homepage.location.present? %>
            <a href="/locations/<%= races_homepage.location.id %>">
              <%= races_homepage.location.race_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(races_homepage.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(races_homepage.updated_at) %> ago
        </td>

        <td>
          <a href="/races_homepages/<%= races_homepage.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @races_homepages, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
