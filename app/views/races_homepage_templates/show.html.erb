<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Races homepage #<%= @races_homepage.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/races_homepages" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link races_homepage start -->
      <div class="col">
        <a href="/races_homepages/<%= @races_homepage.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit races homepage
        </a>
      </div>
      <!-- Edit link races_homepage end -->

      <!-- Delete link races_homepage start -->
      <div class="col">
        <a href="/delete_races_homepage/<%= @races_homepage.id %>" class="btn btn-block btn-outline-secondary">
          Delete races homepage
        </a>
      </div>
      <!-- Delete link races_homepage end -->
    </div>

    <dl>
      <dt>
        Race
      </dt>
      <!-- Display race_id start -->
      <dd>
        <%= @races_homepage.race_id %>
      </dd>
      <!-- Display race_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @races_homepage.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Location
      </dt>
      <!-- Display location_id start -->
      <dd>
        <%= @races_homepage.location_id %>
      </dd>
      <!-- Display location_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@races_homepage.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@races_homepage.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
